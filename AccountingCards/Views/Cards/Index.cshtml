@model AccountingCards.Models.AccountingViewModel

@{
    ViewBag.Title = "Accounting Cards";
    Layout = "_Layout";
}

@section Styles
{
    .card {
    border: black 1px solid;
    width: 12vw;
    height: 30vh;
    }
}

<div id="app">
    <h2>Accounting Cards</h2>
    <div v-for="card in cards" class="card align-items-center justify-content-center mt-5">
        {{ card.name }}
    </div>
</div>

@section Scripts
{
    <script src="https://unpkg.com/vue@next"></script>
    
    <script>
    
    const app = Vue.createApp({
        data(){
            return {
                cards: @Json.Serialize(Model.Cards)
            }
        }
    });
    app.mount('#app');
        
    </script>
}
